<!DOCTYPE html>
<html lang="en" class="bg-light-background dark:bg-dark-background">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MercApp</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>

<body class="text-light-primary dark:text-dark-primary flex flex-col min-h-screen">
    <header>
        <nav
            class="bg-light-background dark:bg-dark-background border-b border-light-secondary dark:border-dark-secondary shadow-md">
            <div class="container mx-auto flex justify-between items-center p-4">
                <a class="text-2xl font-bold" asp-area="" asp-controller="Home" asp-action="Index">MercApp</a>
                <button id="theme-toggle" class="bg-light-accent dark:bg-dark-accent text-white px-4 py-2 rounded">
                    Toggle Theme
                </button>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal con flex-grow para ocupar el espacio restante -->
    <div class=" flex-grow bg-light-background dark:bg-dark-background ">
        <main role="main" class="bg-light-background dark:bg-dark-background p-6 rounded shadow-md">
            @RenderBody()
        </main>
    </div>

    <!-- Footer colocado al final de la página -->
    <footer
        class="border-t mt-auto py-4 bg-light-background dark:bg-dark-background text-center text-light-primary dark:text-dark-primary">
        <div class="container mx-auto">
            &copy; 2024 - MercApp - <a class="text-light-secondary dark:text-dark-secondary hover:underline" asp-area=""
                asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Script para alternar el tema claro/oscuro
        const themeToggleBtn = document.getElementById('theme-toggle');
        themeToggleBtn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
